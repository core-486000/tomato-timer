// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int     @id
  username String  @unique @db.VarChar(255)
  timer    Timer[]

  @@map(name: "users")
}

// ユーザごとに生成され、タイマー時間の変更、1日の作業時間を記録する。
model Timer {
  userId         Int
  timerRecordId  Int        @default(autoincrement())
  workTime       DateTime[] @db.Time
  breakTime      DateTime[] @db.Time
  Date           DateTime   @db.Date
  TodaysWorkTime DateTime   @db.Time
  user           User       @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id(fields: [userId, timerRecordId], name: "timerCompositeId")
  @@map(name: "timers")
}
