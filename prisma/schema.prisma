// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   Int    @id
  username String @unique @db.VarChar(255)
  timer    Timer?

  @@map(name: "users")
}

model Timer {
  userId Int      @id
  user   User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  time   Time?
  record Record[]

  @@map(name: "timers")
}

model Time {
  userId        Int   @id
  workTime      Int
  breakTime     Int
  loop          Int
  lastBreakTime Int
  timer         Timer @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@map(name: "time")
}

// 毎日の作業時間を記録する
model Record {
  userId         Int
  Date           DateTime @db.Date
  WorkTimeRecord DateTime @db.Time
  timer          Timer    @relation(fields: [userId], references: [userId], onDelete: Cascade)

  @@id(fields: [userId, Date], name: "recordCompositeId")
  @@map(name: "records")
}
